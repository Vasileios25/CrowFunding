@{
}
@{
    ViewData["Title"] = "Log in";
}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

<div class="container">
    <div class="row">
        <div class="col-sm-3">
        </div>
        <div class="col-md-6">
            <h1 class="text-center text-success" style="font-family:Georgia;">Log In</h1>
            <br />
            <div class="col-sm-12">
                <ul class="nav nav-pills">
                    <li class="" style="width:50%">
                        <a class="btn btn-lg btn-default"
                           data-toggle="tab" href="#backerMenu" id="Backer" onclick="GetUser(this.id)">Backer</a>
                    </li>
                    <li class=" " style="width:48%">
                        <a class=" btn btn-lg btn-default"
                           data-toggle="tab" href="#projectCreatorMenu" id="Creator" onclick="GetUser(this.id)">Project Creator</a>
                    </li>
                </ul>
                <br />
                <br />
                <div class="tab-content">
                    <div id="backerMenu" class="tab-pane fade in active">
                        <form class="needs-validation" novalidate>
                            <div class="form-row">
                                <div class="col-md-6 mb-3">
                                    <label for="Email">Email</label>
                                    <input type="email" class="form-control" id="Email" name="Email" />
                                    <br />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="Password">Password</label>
                                    <input type="password" class="form-control" id="Password" name="Password" />
                                    <br />

                                </div>
                            </div>
                            <input class="pull-right btn btn-block btn-success" type="button" onclick="loginButtonB()" value="Enter">
                        </form><br /><br />
                        <a href="/Home/SignUp" class="pull-right btn btn-block btn-info">Sign Up  </a>
                    </div>
                    <div id="projectCreatorMenu" class="tab-pane fade">

                        <form class="needs-validation" novalidate>

                            <div class="form-row">
                                <div class="col-md-6 mb-3">
                                    <label for="Email">Email</label>
                                    <input type="email" class="form-control" id="EmailC" name="Email" />
                                    <br />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="Password">Password</label>
                                    <input type="password" class="form-control" id="PasswordC" name="Password" />
                                    <br />
                                </div>
                            </div>
                            <input class="pull-right btn btn-block btn-success" type="button" onclick="loginButtonPC()" value="Enter">
                            @*<button class="btn btn-primary" id="Creator" type="button" onclick="loginButtonPC()" value="Creator"> Enter </button>*@


                        </form>
                        <br /><br />
                        <a href="/Home/SignUp" class="pull-right btn btn-block btn-info"> Sign Up  </a>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="responseDiv" style="font-family: Georgia;" align="center">  </div>
<script src="~/js/loginUser.js"></script>